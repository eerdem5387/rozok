generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model SiteSettings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt
}

model AdminUser {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Page {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  content     String?
  metaTitle   String?
  metaDesc    String?
  heroTitle   String?
  heroSubtitle String?
  heroImage   String?
  published   Boolean  @default(true)
  updatedAt   DateTime @updatedAt
}

model BoardMember {
  id          String   @id @default(cuid())
  name        String
  title       String
  role        String
  image       String?
  email       String?
  link        String?
  isChairman  Boolean  @default(false)
  order       Int      @default(0)
  updatedAt   DateTime @updatedAt
}

model School {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  district    String
  level       String
  description String?
  image       String?
  logo        String?
  websiteUrl  String?
  phone       String?
  address     String?
  email       String?
  facilities  String?
  about       String?
  gallery     String?
  order       Int      @default(0)
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model News {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  excerpt     String?
  content     String
  category    String
  image       String?
  publishedAt DateTime
  viewCount   Int      @default(0)
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String?
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model BurslulukBasvuru {
  id                  String   @id @default(cuid())
  refNo               String   @unique
  studentName         String
  tcKimlik            String?
  grade               String
  currentSchool       String?
  fatherName          String?
  fatherMeslek        String?
  fatherPhone         String?
  fatherWorkAddress   String?
  motherName          String?
  motherMeslek        String?
  motherPhone         String?
  motherWorkAddress   String?
  email               String?
  kvkkOnay            Boolean  @default(false)
  examDate            String?
  examPlace           String?
  examTime            String?
  createdAt           DateTime @default(now())
}
